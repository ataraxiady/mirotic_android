<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:gravity="center"
    android:keepScreenOn="true"
    android:orientation="vertical">

    <ImageView
        android:layout_width="70dp"
        android:layout_height="20dp"
        android:layout_gravity="left"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:src="@drawable/buttonback" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:src="@drawable/signin" />

            <RelativeLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/center_image"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/buttonprofile" />

                <ImageButton
                    android:id="@+id/imageAdd"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/buttoncamera"/>

            </RelativeLayout>


            <ImageView
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"
                android:src="@drawable/basicinfo" />

            <EditText
                android:id="@+id/nameEdit"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/inputbg"
                android:paddingLeft="10dp"
                android:hint="Name"
                android:imeOptions="actionNext"
                android:inputType="text" />

            <EditText
                android:id="@+id/ageEdit"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/inputbg"
                android:layout_marginTop="5dp"
                android:paddingLeft="10dp"
                android:hint="Age"
                android:imeOptions="actionDone"
                android:inputType="number" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:layout_marginTop="5dp"
                android:background="@drawable/inputbg"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/genderText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="Gender"
                    android:textSize="17dp" />

                <RadioGroup
                    android:id="@+id/genderRadio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/man"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_margin="10dp"
                        android:text="남성" />

                    <RadioButton
                        android:id="@+id/woman"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_margin="10dp"
                        android:text="여성" />

                </RadioGroup>

            </LinearLayout>


            <EditText
                android:id="@+id/areaEdit"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/inputbg"
                android:hint="Area"
                android:inputType="text" />


            <ImageView
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/logininfo" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/idEdit"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:paddingLeft="10dp"
                    android:background="@drawable/inputbg"
                    android:layout_weight="1"
                    android:hint="ID"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:imeOptions="actionDone"
                    android:inputType="text" />

                <ImageView
                    android:id="@+id/idCheckButton"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/buttoncheck" />
            </LinearLayout>

            <EditText
                android:id="@+id/passwordEdit"
                android:layout_width="match_parent"
                android:paddingLeft="10dp"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/inputbg"
                android:hint="Password"
                android:inputType="textPassword" />


            <ImageView
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/hobbyinfo" />

            <LinearLayout
                android:id="@+id/linear_hobby1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:layout_below="@+id/text_hobby"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/inputbg"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_hobby1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="1 순위" />

                <Spinner
                    android:id="@+id/hobby_first"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:textAlignment="center" />

                <Spinner
                    android:id="@+id/hobby_first_sub"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/linear_hobby2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/inputbg"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_hobby2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="2 순위" />

                <Spinner
                    android:id="@+id/hobby_second"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:textAlignment="center" />

                <Spinner
                    android:id="@+id/hobby_second_sub"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_hobby3"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/inputbg"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_hobby3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="3 순위" />

                <Spinner
                    android:id="@+id/hobby_third"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:textAlignment="center" />

                <Spinner
                    android:id="@+id/hobby_third_sub"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

            </LinearLayout>


            <ImageView
                android:id="@+id/join"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="50dp"
                android:src="@drawable/buttonsignin" />

        </LinearLayout>


    </ScrollView>

</LinearLayout>

