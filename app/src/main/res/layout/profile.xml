<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:keepScreenOn="true">

    <TextView
        android:id="@+id/text_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="프로필 사진"
        android:textColor="@android:color/background_dark" />

    <LinearLayout
        android:id="@+id/linear_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/left_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="5dp"
            app:srcCompat="@android:color/darker_gray" />

        <ImageView
            android:id="@+id/center_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="20dp"
            app:srcCompat="@android:color/darker_gray" />


        <ImageView
            android:id="@+id/right_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="5dp"
            app:srcCompat="@android:color/darker_gray" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_image"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="닉네임 : "
            android:textColor="@android:color/black" />

        <EditText
            android:id="@+id/nameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="입 력"
            android:inputType="textPersonName"
            android:textColorLink="@android:color/darker_gray" />

        <Button
            android:id="@+id/nickname_btn"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:text="중복확인"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_sex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_name"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_margin="10dp"
            android:text="성별  : "
            android:textColor="@android:color/black" />

        <RadioGroup
            android:id="@+id/gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <RadioButton
                android:id="@+id/man"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_margin="10dp"
                android:text="남성" />

            <RadioButton
                android:id="@+id/woman"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_margin="10dp"
                android:text="여성" />

        </RadioGroup>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linear_from"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_sex"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="거주지역 : "
            android:textColor="@android:color/black" />

        <Spinner
            android:id="@+id/from_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="3"
            android:textAlignment="center" />

        <Spinner
            android:id="@+id/from_sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="3"
            android:textAlignment="center" />
        <Spinner
            android:id="@+id/from_sub2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="3"
            android:textAlignment="center" />

    </LinearLayout>
<RelativeLayout
    android:layout_below="@id/linear_from"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content">
        <TextView
            android:id="@+id/text_hobby"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="취미선택 "
            android:textColor="@android:color/black" />

    <LinearLayout
        android:id="@+id/linear_hobby1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/text_hobby"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_hobby1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_margin="10dp"
            android:text="1 순위" />
        <Spinner
            android:id="@+id/hobby_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="3"
            android:textAlignment="center" />

        <Spinner
            android:id="@+id/hobby_first_sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="3" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear_hobby2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linear_hobby1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_hobby2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_margin="10dp"
            android:text="2 순위" />
        <Spinner
            android:id="@+id/hobby_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="3"
            android:textAlignment="center" />

        <Spinner
            android:id="@+id/hobby_second_sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="3" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear_hobby3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linear_hobby2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_hobby3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_margin="10dp"
            android:text="3 순위" />
        <Spinner
            android:id="@+id/hobby_third"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="3"
            android:textAlignment="center" />

        <Spinner
            android:id="@+id/hobby_third_sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="3" />

    </LinearLayout>
</RelativeLayout>
    <Button
        android:id="@+id/join"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/text_image"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:text="회원가입" />


</RelativeLayout>

