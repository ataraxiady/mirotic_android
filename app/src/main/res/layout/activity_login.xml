<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/intro_back">


    <ImageView
        android:layout_marginTop="40dp"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:src="@drawable/intro_icon" />


    <EditText
        android:id="@+id/id"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:hint="아이디를 입력하세요."
        android:paddingStart="50dp"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:maxLines="1"
        android:layout_marginTop="60dp"
        android:paddingLeft="10dp"
        android:singleLine="true"
        android:textColor="@color/Color_white"
        android:textColorHint="@color/Color_white_40"
        android:background="@drawable/inputid"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/password"
        android:layout_width="250dp"
        android:layout_height="45dp"

        android:hint="비밀번호를 입력하세요."
        android:paddingStart="50dp"
        android:imeOptions="actionDone"
        android:inputType="textPassword"
        android:maxLines="1"
        android:paddingLeft="10dp"
        android:layout_marginTop="8dp"
        android:singleLine="true"
        android:textColor="@color/Color_white"
        android:textColorHint="@color/Color_white_40"
        android:background="@drawable/inputpw"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/login"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/buttonlogin"/>]
    <ImageView
        android:layout_width="180dp"
        android:layout_height="20dp"
        android:src="@drawable/signuptext"
        android:layout_marginTop="20dp"/>

    <ImageView
        android:id="@+id/go_join"
        android:layout_width="95dp"
        android:layout_height="20dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/buttonsignup"/>
</LinearLayout>