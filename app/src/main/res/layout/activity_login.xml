    <Button
        android:id="@+id/btnKakao"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#ffcc00"
        android:text="카카오톡으로 시작하기"
        android:layout_marginTop="100dp"/>


</LinearLayout>