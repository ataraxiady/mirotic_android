<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    android:orientation="vertical">

        <LinearLayout
            android:id="@+id/first_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/sub_img_picture" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/second_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:layout_below="@+id/first_layout">

            <TextView
                android:id="@+id/profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="홍길동"
                android:textColor="@android:color/background_dark"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/profile_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/profile_name"
                android:text="(24)"
                android:textColor="@android:color/background_dark"
                android:textSize="18sp" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/third_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/second_layout"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:gravity="left"
                android:text=" 성   별  :  "
                android:textColor="@android:color/background_dark"
                android:textSize="20sp" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/man"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="남자" />

                <RadioButton
                    android:id="@+id/woman"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="여자" />

            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/four_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/third_layout"
            android:layout_marginTop="35dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:gravity="left"
                android:text="거주지역  : "
                android:textColor="@android:color/background_dark"
                android:textSize="20sp" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/profile_area"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="미입력"
                    android:textColor="@android:color/background_dark"
                    android:textSize="20sp"
                    android:visibility="visible" />

                <EditText
                    android:id="@+id/profile_area_edit"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:backgroundTint="@android:color/transparent"
                    android:hint="주소를 입력하세요."
                    android:inputType="text"
                    android:textColor="@android:color/background_dark"
                    android:textSize="20sp"
                    android:visibility="gone" />

            </FrameLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/hobbytext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/four_layout"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:text="나의 취미"
            android:textColor="@android:color/background_dark"
            android:textSize="20sp" />

        <LinearLayout
            android:id="@+id/hobby1_layout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/hobbytext"
            android:layout_marginTop="10dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="15dp"
                android:textAlignment="center"
                android:text="1 순위" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/mypage_firsthobby1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="미입력"
                    android:textAlignment="center"
                    android:visibility="visible" />

                <Spinner
                    android:id="@+id/hobby_first_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:spinnerMode="dropdown"
                    android:visibility="gone" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/mypage_firsthobby2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="미입력"
                    android:textAlignment="center"
                    android:visibility="visible" />

                <Spinner
                    android:id="@+id/hobby_first_sub_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:spinnerMode="dropdown"
                    android:visibility="gone" />

            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/hobby2_layout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/hobby1_layout"
            android:layout_marginTop="7dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="15dp"
                android:text="2 순위" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/mypage_second_hobby1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="미입력"
                    android:textAlignment="center"
                    android:visibility="visible" />

                <Spinner
                    android:id="@+id/hobby_second_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:spinnerMode="dropdown"
                    android:visibility="gone" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/mypage_second_hobby2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="미입력"
                    android:textAlignment="center"
                    android:visibility="visible" />

                <Spinner
                    android:id="@+id/hobby_second_sub_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:spinnerMode="dropdown"
                    android:visibility="gone" />

            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/hobby3_layout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/hobby2_layout"
            android:layout_marginTop="7dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="15dp"
                android:text="3 순위" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/mypage_thirdhobby1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="미입력"
                    android:textAlignment="center"
                    android:visibility="visible" />

                <Spinner
                    android:id="@+id/hobby_third_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:spinnerMode="dropdown"
                    android:visibility="gone" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/mypage_thirdhobby2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="미입력"
                    android:textAlignment="center"
                    android:visibility="visible" />

                <Spinner
                    android:id="@+id/hobby_third_sub_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:spinnerMode="dropdown"
                    android:visibility="gone" />

            </FrameLayout>
        </LinearLayout>

        <Button
            android:id="@+id/edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hobby3_layout"
            android:layout_centerHorizontal="true"
            android:text="수정" />

</RelativeLayout>

