<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
                android:background="@color/Color_grey01">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/noticeTextView"
        android:layout_marginStart="12dp"
        android:text="1"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/noticeImageView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="17dp"
        android:layout_toEndOf="@+id/textView2" />

    <TextView
        android:id="@+id/noticeTextView"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/noticeAcceptBtn"
        android:layout_toStartOf="@+id/noticeAcceptBtn"
        android:text="강호동님께서 좋아요를 눌렀습니다.대화를 시작하시겠습니까? " />

    <Button
        android:id="@+id/noticeAcceptBtn"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/noticeImageView"
        android:text="수락" />
</RelativeLayout>